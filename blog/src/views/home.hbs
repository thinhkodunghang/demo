<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-lg-6 mg-top">
            <div class="card " >
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.img}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">MUA</a>
                </div>
            </div>
        </div>
        {{/each}}      
    </div>
</div>