<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>course</title>
    <!-- Thêm đường dẫn đến tệp CSS -->
    {{!--
    <link rel="stylesheet" href="/css/app.css"> --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/app.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <link rel="icon" href="images/favicon.ico" type="image/x-icon">
</head>

<body>
    
    <div class="user__main">
        <div>
            <h3>Hồ Sơ Của Tôi</h3>
            <p>Quản lý thông tin hồ sơ để bảo mật tài khoản</p>
        </div>
        <hr class="">
        <div class="user__in4">
            <div class="">
                <img class="img-thumbnail" alt="imgProfile"
                    src="https://yt3.googleusercontent.com/oN0p3-PD3HUzn2KbMm4fVhvRrKtJhodGlwocI184BBSpybcQIphSeh3Z0i7WBgTq7e12yKxb=s176-c-k-c0x00ffffff-no-rj">
            </div>
            <hr class="hr-column">

            <div class="name_user">
                <div class="name_user__value">Name: {{user.name}}</div>
                <div class="name_user__value">Age: {{user.age}}</div>
                <div class="name_user__value">Email: {{user.email}}</div>
                <div id="changeNumberHide" class="name_user__value" style="display: block;">Phone Number:
                    <span id="">{{user.phoneNumber}}</span>
                    <a href="?edit=number" class="name_user__changeNumer">Change Number</a>
                </div>
                <div id="submit_changenumber" style="display: none;">
                    <form action="/me/profile/numberphone" method="post" class="form_submit__changeNumber">
                        <div class=" form_submit__changeNumberChild">
                            <div class=" form_submit__changeNumberChild_2">
                                <label for="changenumber" class="form-label">Update Number Phone: </label>
                                <input type="string" class="form-control form_submit__changeNumber_input"
                                    id="changenumber" name="phoneNumber" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="name_user__gender">
                    <p>Gender:</p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="Male"
                        {{#if (equal user.gender "Male")}}checked{{/if}}>
                        <label class="form-check-label" for="Male">
                            Male
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="Female"
                            checked="" {{#if (equal user.gender "Female")}}checked{{/if}}>
                        <label class="form-check-label" for="Female">
                            Female
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="Other"
                            checked="" {{#if (equal user.gender "Male")}}checked{{/if}}>
                        <label class="form-check-label" for="Other">
                            Khác
                        </label>
                    </div>
                </div>
            </div>

        </div>
    </div>
    
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            //lấy query string từ url hiên tại 
            const urlParams = new URLSearchParams(window.location.search);
            //laay giá trị tham số của key
            const vledit = urlParams.get('edit');
            const handleclickchage = document.getElementsByClassName('name_user__changeNumer');
            const hideifchange = document.getElementById('changeNumberHide');
            const submitchangenumber = document.getElementById('submit_changenumber');


            Array.from(handleclickchage).forEach(function (value) {
                value.onclick = function (e) {
                    e.preventDefault();
                    hideifchange.style.display = 'none';
                    submitchangenumber.style.display = 'block';
                }
            });

        });
    </script>
</body>

</html>